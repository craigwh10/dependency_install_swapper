{
    "name": "dependency_install_swapper_js",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Swap npm & yarn install links interchangeably on npmjs.com",
    "action": {
        "default_title": "Dependency Install Swapper",
        "default_popup": "popup.html"
    },
    "permissions": ["activeTab", "storage"],
    "content_scripts": [
        {
          "js": ["src/content/index.js"],
          "matches": [
            "https://www.npmjs.com/package/*"
          ]
        }
      ]
}